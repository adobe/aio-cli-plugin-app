{
    "extends": "@adobe/eslint-config-aio-lib-config",
    "globals": {
      "NoErrorThrownError": true,
      "getErrorForCallThatShouldThrowAnError": true,
      "fixturePath": true,
      "fixtureFile": true,
      "fixtureJson": true,
      "fixtureHjson": true,
      "fixtureYaml": true,
      "fakeFileSystem": true
    },
    "settings": {
        "jsdoc": {
            "ignorePrivate": true
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "jsdoc/tag-lines": [
            // The Error level should be `error`, `warn`, or `off` (or 2, 1, or 0)
            "error",
            "never",
            {
              "startLines": null
            }
        ]
      }
}
